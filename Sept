import time

print("SIGN UP TO GET AYUDA!")
user = input("Please enter your username: ")
password = int(input("Please enter your password: "))
confirm_password = int(input("Please confirm your password:"))
count = 5
login = user == password

if password != confirm_password:
    print("Invalid Password! Please try again!")
    user = input("Please enter your username: ")
    password = int(input("Please enter your password: "))
    confirm = int(input("Please confirm your password:"))
else:
    print("Login Successfully!")
    

while count > 0:
    count -= 1
    print("Logging in...", count)

if confirm == password:
    print("Welcome!", user)




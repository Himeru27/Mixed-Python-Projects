import time

u = input("Please enter your username: ")
a = int(input("Please enter your Password: "))
b = int(input("Please confirm your Password: "))
count = 5

if a != b:
    print("Wrong Password! Please try again..")
    exit()

while count > 0:
    print("Logging in...", count)
    time.sleep(1)
    count -= 1

print("Login Successful!")
print("Welcome!", u)



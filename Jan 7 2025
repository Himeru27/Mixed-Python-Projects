class test2 {  
    public static void main(String args[]){  
        
     int num1 = 10;
     int num2 = 5;

     int sum = num1 + num2;
     int sum2 = num1 - num2;
     int sum3 = num1*num2;
     int sum4 = num1 % num2;


     System.out.println("Addition: "+ sum);  
     System.out.println("Subtraction: "+ sum2);  
     System.out.println("Multiplication: "+ sum2); 
     System.out.println("Remainder of two numbers: "+ sum2); 
    }  
}  



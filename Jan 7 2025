

import java.util.Scanner;
public class newss {

    public static void main(String[] args) {
        
        int num1, num2;
        Scanner cuzyes = new Scanner(System.in);
        System.out.println("Enter First Number: ");
        num1 = cuzyes.nextInt();
        
        System.out.println("Enter Second Number: ");
        num2 = cuzyes.nextInt();
        
        int sum1 = num1 + num2;
        int sum2 = num1 - num2;
        int sum3 = num1 * num2;
        double sum4 = num1 % num2 + 0.5;

        System.out.println("Addition of these two numbers: "+ sum1);
        System.out.println("Subtraction of these two numbers: "+ sum2);
        System.out.println("Multiplication of these two numbers: "+ sum3);
        System.out.println("Remainder of these two numbers: "+ sum4);
    }
}

